# Database Configuration (pro Docker použijte db, pro lokální localhost)
DB_HOST=db
DB_PORT=3306
DB_USER=root
DB_PASSWORD=1234
DB_NAME=sketchwave

# Alternativně lze použít jednu URL (např. z Aiven/Render):
# DATABASE_URL=mysql://user:pass@host:port/dbname?ssl-mode=REQUIRED
# MYSQL_URL lze použít stejně jako DATABASE_URL

# SSL (Aiven obvykle vyžaduje TLS)
# DB_SSL=true                    # zapne SSL
# DB_SSL_CA=<CA cert obsah>      # volitelné, pokud je vyžadována verifikace CA
# DB_SSL_CA_PATH=/path/to/ca.pem # volitelné, načtení CA z souboru
# DB_SSL_REJECT_UNAUTHORIZED=true # vynucení ověření certifikátu serveru

# Session Secret (ZMĚŇTE pro produkci!)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Google OAuth Credentials
# Získejte na: https://console.cloud.google.com/
# 1. Vytvořte projekt
# 2. Aktivujte Google+ API  
# 3. Vytvořte OAuth 2.0 credentials
# 4. Přidejte redirect URI: http://localhost:3000/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Application
PORT=3000
NODE_ENV=development
